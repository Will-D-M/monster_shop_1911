<h2>Bulk Discounts</h2>

<% @discounts.each do |discount| %>
  <section id="discount<%= discount.id %>">
    <h3><p>Name: <%= link_to discount.name, merchant_discount_path(discount.id) %></p></h3>
    <p>Percent Off: <%= discount.percent_off %>%</p>
    <p>Minimum Quantity: <%= discount.min_quantity %></p>
    <p><%= link_to "Edit Bulk Discount", edit_merchant_discount_path(discount.id) %></p>
    <p><%= button_to "Delete Bulk Discount", merchant_discount_path(discount.id), method: :delete %></p>
  </section>
<% end %>
<%= link_to "New Bulk Discount", new_merchant_discount_path %>
