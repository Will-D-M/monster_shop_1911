<h2>Edit Bulk Discount</h2>

<%= form_tag "/merchant/discounts/#{@discount.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@discount.name}" %>

  <%= label_tag :percent_off %>
  <%= text_field_tag :percent_off, "#{@discount.percent_off}" %>

  <%= label_tag :min_quantity %>
  <%= text_field_tag :min_quantity, "#{@discount.min_quantity}" %>

  <%= submit_tag "Update Discount" %>
<% end %>
