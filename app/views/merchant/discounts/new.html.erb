<h2>New Bulk Discount</h2>

<%= form_tag "/merchant/discounts" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :percent_off %>
  <%= text_field_tag :percent_off %>

  <%= label_tag :min_quantity %>
  <%= text_field_tag :min_quantity %>

  <%= submit_tag "Create Discount" %>
<% end %>
